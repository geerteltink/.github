{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Default renovate configuration",
    "extends": [
        "config:recommended",
        "group:allNonMajor",
        "schedule:weekly",
        ":automergeMinor",
        ":automergePr",
        ":combinePatchMinorReleases",
        ":disableDependencyDashboard",
        ":enableVulnerabilityAlertsWithLabel(security)",
        ":gitSignOff",
        ":ignoreModulesAndTests",
        ":label(dependencies)",
        ":prNotPending",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":separateMajorReleases",
        ":timezone(Europe/Amsterdam)"
    ],
    "enabledManagers": [
        "composer",
        "docker-compose",
        "dockerfile",
        "github-actions",
        "npm",
        "cargo",
        "maven",
        "gradle"
    ],
    "commitBodyTable": true,
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [
            "schedule:weekly"
        ]
    },
    "rangeStrategy": "bump",
    "bumpVersion": "patch",
    "rollbackPrs": true,
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "enabled": false
        }
    ],
    "vulnerabilityAlerts": {
        "rangeStrategy": "bump"
    }
}

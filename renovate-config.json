{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for repositories in the Genetic Consolidated organisation",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:recommended",
    ":semanticCommits",
    ":timezone(UTC)",
    ":disableRateLimiting",
    ":ignoreModulesAndTests",
    ":automergeDisabled",
    ":automergeBranch",
    ":prNotPending",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    ":combinePatchMinorReleases"
  ],
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": true,
  "rollbackPrs": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "^laminas/"
      ],
      "groupSlug": "laminas",
      "groupName": "Laminas packages"
    },
    {
      "matchPackagePatterns": [
        "^mezzio/"
      ],
      "groupSlug": "mezzio",
      "groupName": "Mezzio packages"
    },
    {
      "matchPackagePatterns": [
        "^symfony/"
      ],
      "groupSlug": "symfony",
      "groupName": "symfony packages"
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default renovate configuration",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":automergeMinor",
    ":automergePr",
    ":automergeBranch",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":label(dependencies)",
    ":gitSignOff",
    ":disableDependencyDashboard",
    ":prNotPending",
    ":rebaseStalePrs",
    ":schedule:weekly",
    ":semanticCommits",
    ":separateMajorReleases",
    ":timezone(Europe/Amsterdam)"
  ],
  "enabledManagers": [
    "composer",
    "docker-compose",
    "dockerfile",
    "github-actions",
    "npm"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "commitBodyTable": true,
  "rangeStrategy": "bump",
  "rollbackPrs": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "enabled": false
    }
  ]
}
